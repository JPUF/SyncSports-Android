<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"

              android:id="@+id/parent"
              android:layout_width="match_parent"
              android:layout_weight="1"
              android:layout_height="wrap_content"
>
    <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content" android:id="@+id/timeText" android:layout_weight="1"
            tools:text="03:42" android:layout_gravity="center" android:textStyle="bold|italic"
            android:textColor="@color/greyedOut"/>
    <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content" android:id="@+id/message" android:layout_weight="7"
            tools:text="NAME: Here goes the chat message"/>
</LinearLayout>